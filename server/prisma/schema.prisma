// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model PatientUser {
  id         String @id @default(uuid())
  name       String
  phone      String
  password   String
  avatar_url String

  email     String   @unique
  createdAt DateTime @default(now())

  ConnectionsSchedule ConnectionsSchedule[]
  UserToken           UserToken[]

  @@map("patient_user")
}

model Doctor {
  id             String           @id @default(uuid())
  name           String           @unique
  speciality     String
  price          Float
  city           String
  state          String
  description    String
  experience     String
  createdAt      DateTime         @default(now())
  DoctorSchedule DoctorSchedule[]

  @@map("doctor")
}

model DoctorSchedule {
  id                  String                @id @default(uuid())
  available           Boolean               @unique
  doctorId            String
  date                DateTime
  doctor              Doctor                @relation(fields: [doctorId], references: [id])
  createdAt           DateTime              @default(now())
  ConnectionsSchedule ConnectionsSchedule[]

  @@map("doctor_schedule")
}

model ConnectionsSchedule {
  id               String         @id @default(uuid())
  patientUserId    String         @unique
  doctorScheduleId String         @unique
  patientUser      PatientUser    @relation(fields: [patientUserId], references: [id])
  doctorSchedule   DoctorSchedule @relation(fields: [doctorScheduleId], references: [id])
  createdAt        DateTime       @default(now())

  @@map("connections_schedule")
}

model UserToken {
  id            String   @id @default(uuid())
  token         String   @default(uuid())
  patientUserId String
  created_at    DateTime @default(now())
  updated_at    DateTime @default(now())

  patientUser PatientUser @relation(fields: [patientUserId], references: [id])

  @@map("user_tokens")
}
